<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans
  		    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="pihappsService" class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
		<property name="transactionManager" ref="transactionManager"/>
		<property name="target">
			<bean class="org.openmrs.module.pihapps.PihAppsServiceImpl" autowire="byType">
				<property name="locationService" ref="locationService"/>
				<property name="orderService" ref="orderService"/>
				<property name="sessionFactory" ref="dbSessionFactory"/>
			</bean>
		</property>
		<property name="preInterceptors" ref="serviceInterceptors"/>
		<property name="transactionAttributeSource">
			<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
		</property>
	</bean>

	<bean parent="serviceContext">
		<property name="moduleService">
			<list merge="true">
				<value>org.openmrs.module.pihapps.PihAppsService</value>
				<ref bean="pihappsService"/>
			</list>
		</property>
	</bean>

</beans>
